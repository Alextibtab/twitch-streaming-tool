{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch main.ts",
    "start": "deno run --allow-net --allow-read --allow-env main.ts",
    "test": "deno test --allow-net --allow-read --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/async": "jsr:@std/async@^1.0.10",
    "@std/crypto": "jsr:@std/crypto@^1.0.4",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/fs": "jsr:@std/fs@^1.0.13",
    "@std/log": "jsr:@std/log@^0.224.14",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@twurple/api": "npm:@twurple/api@^7.2.1",
    "@twurple/auth": "npm:@twurple/auth@^7.2.1",
    "@twurple/chat": "npm:@twurple/chat@^7.2.1",
    "@twurple/eventsub-base": "npm:@twurple/eventsub-base@^7.2.1",
    "@twurple/eventsub-http": "npm:@twurple/eventsub-http@^7.2.1",
    "@types/node": "npm:@types/node@^22.13.5"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
  },
  "lint": {
    "include": ["src/", "main.ts"],
  },
  "fmt": {
    "include": ["src/", "main.ts"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false,
  }
